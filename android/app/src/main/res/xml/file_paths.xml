<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Allows access to the app's internal cache folder -->
    <cache-path
        name="cache"
        path="." />

    <!-- Allows access to the app's files folder -->
    <files-path
        name="files"
        path="." />

    <!-- Allows access to external files (Pictures, Documents, etc.) -->
    <external-path
        name="external_files"
        path="." />

    <!-- Optional: Access to external storage for media -->
    <external-files-path
        name="external_media"
        path="." />

</paths>
